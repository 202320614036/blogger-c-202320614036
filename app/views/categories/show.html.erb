<% content_for :title, @category.name %>

<div class="container mt-5">
  <h3 class="fw-bold"><%= @category.name %></h3>

  <!-- üü¢ Kategoriye ait g√∂nderiler -->
  <% if @posts.any? %>
    <div class="mt-4">
      <% @posts.each do |post| %>
        <div class="mb-4 border-bottom pb-3">
          <%= link_to post.title, post_path(post), class: "h5 d-block text-success text-decoration-none" %>
          <small class="text-muted"><%= post.created_at.strftime("%d %b %Y") %></small>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">Bu kategoriye ait hen√ºz bir g√∂nderi bulunmuyor.</p>
  <% end %>

  <!-- üîß Y√∂netim baƒülantƒ±larƒ± -->
  <div class="mt-4">
    <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-warning me-2" %>
    <%= button_to "Destroy this category", @category, method: :delete, data: { confirm: "Silmek istediƒüine emin misin?" }, class: "btn btn-danger me-2" %>
    <%= link_to "Back to categories", categories_path, class: "btn btn-secondary" %>
  </div>
</div>