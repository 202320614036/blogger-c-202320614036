<div class="card shadow-sm">
  <div class="card-header fw-semibold">
    <%= @post.title %>
  </div>

  <div class="card-body">
    <!-- ✅ Kategoriler Badge olarak -->
    <div class="mb-3 text-end">
      <% @post.categories.each do |category| %>
        <span class="badge bg-primary me-1"><%= category.name %></span>
      <% end %>
    </div>

    <!-- ✅ Görsel (varsa göster) -->
    <% if @post.image.attached? %>
      <div class="mb-3 text-center">
        <%= image_tag(@post.image, class: "img-fluid rounded shadow-sm", style: "max-height: 400px;") %>
      </div>
    <% end %>

    <hr>
    <%= @post.article %>
  </div>

  <div class="card-footer d-flex justify-content-between">
    <%= link_to "Back", posts_path, class: "btn btn-secondary" %>
    <div>
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning me-2" %>
      <%= link_to "Sil", post_path(@post), method: :delete, data: { confirm: "Silinsin mi?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
